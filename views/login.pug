extends base
block vars
  -var title = "Login"

block body
  h1 Log into your Account

  if error
    p ERROR: #{error}

  form(method="post")

    span Email:
    input(type="email", name="email", required=true)
    br

    span password:
    input(type="password", name="password", required=true)
    br      

    input(type="submit")
